{% extends 'base.html.twig' %}

{% block title %}Hello {{app.user.username}}!{% endblock %}



{% block body %}

    <div class="imageFond">
        <h2>Liste des messages</h2> 
        <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Objet</th>
                <th>Message</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
        <tr>
            <td>{{ message.Nom }}</td>
            <td>{{ message.Prenom }}</td>
            <td>{{ message.Email }}</td>
            <td>{{ message.Objet }}</td>
            <td>{{ message.message|slice(0, 30) }}</td>
            <td>{{ message.dateAdd|date("d/m/Y") }}</td>            
            <td>
                <a class="fa fa-trash" href="{{ path("message_delete", { id: message.id}) }}"></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
        </table>

        <h2>Liste des commentaires</h2> 
        <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Pseudo</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
        <tr>
            <td>{{ commentaire.abonne.username }}</td>
            <td>{{ commentaire.description }}</td>           
            <td>
                <a class="fa fa-trash" href="{{ path("comment_delete", { id: commentaire.id}) }}"></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
        </table>

    </div>
{% endblock %}