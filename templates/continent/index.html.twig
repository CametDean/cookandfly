{% extends 'base.html.twig' %}

{% block title %}Hello {{continent.nom}}{% endblock %}

{% block body %}

{% if recettes is defined %}
    <div class="content">
        <h1>Votre recherche</h1>
        {% for recette in recettes %}
            <div class="card" style="width: 18rem;">
                <img src="{{dossier_images ~ recette.photo}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{recette.nom}}</h5>
                    <a href="{{ path("affichage_recette", {id: recette.id}) }}" class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="content">
        <h1>PAGE {{continent.nom}}</h1>
        {% for recette in continent.recettes %}
            <div class="card" style="width: 18rem;">
                <img src="{{dossier_images ~ recette.photo}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{recette.nom}}</h5>
                    <a href="{{ path("affichage_recette", {id: recette.id}) }}" class="btn btn-primary">En savoir plus</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% endblock %}