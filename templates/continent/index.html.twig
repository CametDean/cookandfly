{% extends 'base.html.twig' %}

{% block title %}Hello {{continent.nom}}{% endblock %}

{% block body %}

<div class="content">
    <h1>PAGE {{continent.nom}}</h1>
    {% for recette in continent.recettes %}
        <div class="card" style="width: 18rem;">
            <img src="{{recette.photo}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{recette.nom}}</h5>
                <a href="{{ path("affichage_recette", {nom: recette.nom}) }}" class="btn btn-primary">En savoir plus</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}